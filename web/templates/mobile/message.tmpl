<!DOCTYPE html>

#import autosubliminal
#from autosubliminal import version
#from autosubliminal.db import LastDownloads

<html>

<head>
    <title>Auto-Subliminal Mobile</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Vendor mobile theme -->
    #set $vendor_mobile_css = $autosubliminal.DEVELOPER and "vendor.mobile.css" or "vendor.mobile.min.css"
    <link rel="stylesheet" href="$autosubliminal.WEBROOT/css/mobile/$vendor_mobile_css" media="screen">
    <!-- Vendor mobile javascript -->
    #set $vendor_mobile_js = $autosubliminal.DEVELOPER and "vendor.mobile.js" or "vendor.mobile.min.js"
    <script type="text/javascript" src="$autosubliminal.WEBROOT/js/mobile/$vendor_mobile_js"></script>
</head>

<body>

<div data-role="page" data-add-back-btn="false">
    <div data-role="header" id="header">
        <a href="$autosubliminal.WEBROOT/home" data-role="button" data-icon="home" data-theme="b">Home</a>
        <h1>Mobile</h1>
    </div>

    <div data-role="content">
        <div data-role="collapsible-set" data-theme="b" data-content-theme="b">
            <div data-role="collapsible" data-collapsed="false">
                <h3>Message</h3>
                $message
            </div>
        </div>
    </div>

    <div data-role="footer" data-theme="b">
        <div class="ui-bar ui-title">
            $version.RELEASE_VERSION.upper()
        </div>
    </div>

</div>

</body>

</html>